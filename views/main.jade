div(class="clearfix")
  form(ng-submit="post()", ng-show="authenticated")
    h2 {{current_user}}
    textarea(required, class="form-control", maxlength="200", rows="3", placeholder="Say something", ng-model="newPost.text")
    input(class="btn submit-btn pull-right", type="submit", value="Tweet!")
  div(id="post-stream")
    h4 Tweet Feed
    div(class="post", ng-repeat="post in posts | orderBy:'created_at':true", ng-class-odd="'odd'", ng-class-even="'even'")
      p {{post.text}}
      small Posted by @{{post.username}}
      small(class="pull-right") {{post.created_at | date:"h:mma 'on' MMM d, y"}}